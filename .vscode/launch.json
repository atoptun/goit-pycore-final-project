    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run personal_assistant.main",
            "type": "debugpy",
            "request": "launch",
            "module": "src.personal_assistant.main",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Poetry: Debug script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/personal_assistant/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }

    ]
}
